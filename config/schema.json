{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opmlwatch.dev/schema/config.json",
  "title": "OPMLWatch Config",
  "type": "object",
  "required": ["feeds", "sinks"],
  "properties": {
    "timezone": { "type": "string" },
    "store": {
      "type": "object",
      "properties": {
        "driver": { "type": "string", "enum": ["sqlite"] },
        "dsn": { "type": "string" },
        "seen_file": { "type": "string" }
      }
    },
    "feeds": {
      "type": "object",
      "required": ["opml_path"],
      "properties": {
        "opml_path": { "type": "string", "minLength": 1 },
        "max_items_per_feed": { "type": "integer", "minimum": 1 },
        "max_entries_per_run": { "type": "integer", "minimum": 1 },
        "max_concurrent_feeds": { "type": "integer", "minimum": 1 },
        "request_timeout_seconds": { "type": "integer", "minimum": 1 }
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "include_keywords": { "type": "array", "items": { "type": "string" } },
          "exclude_keywords": { "type": "array", "items": { "type": "string" } },
          "include_domains": { "type": "array", "items": { "type": "string" } },
          "min_content_length": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "summarizer": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["none", "openai"] },
        "enabled": { "type": "boolean" },
        "config": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "sinks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "name", "enabled", "config"],
        "properties": {
          "type": { "type": "string", "enum": ["webhook", "markdown", "email", "site"] },
          "name": { "type": "string" },
          "enabled": { "type": "boolean" },
          "config": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
